#!/bin/bash

SERIAL_PATH="/dev/ttyUSB0"
SERIAL_BAUD=9600
COMMAND=""

CLI_NAME="ardmon"

WORKING_DIR="./."$CLI_NAME"_temp/"

SOCAT_PID_PATH=$WORKING_DIR"socat.pid"
PIPE_PATH=$WORKING_DIR$CLI_NAME"_pipe"

usage() {
    echo "Usage:"
    echo "  $CLI_NAME start (-p [path] -b [baud])       - Start background serial connection"
    echo "  $CLI_NAME stop                              - Stop background connection"
    echo "  $CLI_NAME send [command 1, command 2...]    - Send command to Arduino"
}

openSerial() {
    if [[ ! -d $WORKING_DIR ]]; then
        mkdir -p $WORKING_DIR
    fi

    socat PTY,link=$PIPE_PATH,b$2,raw,echo=0 $1,b$2,raw & # run socat to connect FIFO to serial in background
    # socat creates the pipe file automatically

    echo $! >> $SOCAT_PID_PATH # store pid of latest executed background process
    echo "Started socat with PID $(< $SOCAT_PID_PATH)"
}

start() {
    while [[ $# -gt 0 ]]; do
        case "$1" in
            -p)
                SERIAL_PATH=$2
                shift 2
                ;;
            -b)
                SERIAL_BAUD=$2
                shift 2
                ;;
            *)
                echo "Invalid usage: use '$CLI_NAME help' to get usage"
                exit 1
                ;;
        esac
    done

    openSerial $SERIAL_PATH $SERIAL_BAUD
}

stop() {
    kill $(< $SOCAT_PID_PATH) && echo "Killed socat (PID $(< $SOCAT_PID_PATH))"
    # socat deteles its associated pipe file automatically

    if [[ -d $WORKING_DIR ]]; then
        rm -r $WORKING_DIR
    fi
}

send() {
    if [[ ! -e $PIPE_PATH ]]; then
        echo "Pipe not found, did you start $CLI_NAME yet?"
        exit 1
    fi

    while [[ $# -gt 0 ]]; do
        echo -e $1 > $PIPE_PATH
        shift 1
    done
    # TODO: handle output, send back errors
}

# main entry
if [[ $# -gt 0 ]]; then

    # get command and remove argument
    COMMAND=$1
    shift 1

    case "$COMMAND" in
        start)
            start $@ # pass remaining arguments to function
            exit 0
            ;;
        send)
            send $@
            exit 0
            ;;
        help)
            usage
            exit 0
            ;;
        stop)
            stop
            exit 0
            ;;
        *)
            echo "Use '$CLI_NAME help' to get usage"
            exit 1
            ;;
    esac
else
    echo "Use '$CLI_NAME help' to get usage"
    exit 1
fi